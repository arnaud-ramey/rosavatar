<launch>

<!-- mouse position to face coords -->
<remap from="win2point/point" to="/avatar/iris_position"/>
<remap from="win2point/state" to="/avatar/state"/>
<node pkg="rosavatar" type="win2point.exe" name="win2point"  output="screen" respawn="true"/>

<!-- mic volume monitor -->
<remap from="/systemSoundLevel" to="/avatar/mouth_vol" />
<node pkg="rospavumeter" type="vumeter.exe" name="micmon"
      args="_record:=false"/>

<!-- avatar -->
<node pkg="rosavatar" type="rosavatar.exe" name="avatar" output="screen" required="true">
  <param name="xml_file" value="$(find rosavatar)/data/avatar_octopus.xml"/>
<!--
  <param name="xml_file" value="$(find rosavatar)/data/avatar_mini.xml"/>
-->
</node>

<!-- show avatar with image_view -->
<!--
<node pkg="image_view" type="image_view"   name="avatar_viewer" output="screen" respawn="true"
      args="image:=/avatar/avatar_image"/>
-->

</launch>
