<?xml version="1.0"?>
<background width="800" height="600" r="150" g="150" b="150"/>
<eye folder="$(find rosavatar)/data/mini_eyes">
  <center x="300" y="200"/>
  <center x="500" y="200" flip="1"/>
</eye>

<!-- nose -->
<binary_led auto_mode_threshold="0.1" folder="$(find rosavatar)/data/leds/white">
  <center x="400" y="300"/>
</binary_led>

<!-- mouth -->
<binary_led auto_mode_threshold="0.8" folder="$(find rosavatar)/data/leds/blue">
  <center x="200" y="400"/>
</binary_led>
<binary_led auto_mode_threshold="0.6" folder="$(find rosavatar)/data/leds/blue">
  <center x="300" y="470"/>
</binary_led>
<binary_led auto_mode_threshold="0.4" folder="$(find rosavatar)/data/leds/blue">
  <center x="400" y="500"/>
</binary_led>
<binary_led auto_mode_threshold="0.6" folder="$(find rosavatar)/data/leds/blue">
  <center x="500" y="470"/>
</binary_led>
<binary_led auto_mode_threshold="0.8" folder="$(find rosavatar)/data/leds/blue">
  <center x="600" y="400"/>
</binary_led>
